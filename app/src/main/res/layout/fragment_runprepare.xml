<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_1">

    <android.support.v7.widget.Toolbar
        style="@style/topbar_bg">

        <TextView
            style="@style/topbar_title"
            android:text="运动"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="建议运动量"/>

            <TextView
                android:id="@+id/tv_user_suggestion_kcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="100kcal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="今日已运动量"/>

            <TextView
                android:id="@+id/tv_user_today_kcal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="50kcal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="今日已完成计划的"/>

            <TextView
                android:id="@+id/tv_user_today_finish_percent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="20sp"
                android:text="50%"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_today_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="你还需运动xx步"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sport_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你要选择的运动方式是："
            android:textSize = "20sp"/>

        <RadioGroup
            android:id="@+id/radioGroup_sport_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sport_kind"
            android:layout_marginTop="19dp" >

            <RadioButton
                android:id="@+id/radio_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="悠闲散步" />

            <RadioButton
                android:id="@+id/radio_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运动跑步" />

            <RadioButton
                android:id="@+id/radio_bike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="室外骑行" />

        </RadioGroup>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt_run_start"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textColor="@color/white"
                android:background="@drawable/bt_run_pause"
                android:text="开始"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>